#!/bin/bash

# Check if rebuild argument is provided
REBUILD=false
if [ "$1" = "rebuild" ]; then
    REBUILD=true
    echo "ğŸ”„ Starting FULL REBUILD of development environment..."
else
    echo "ğŸš€ Starting development environment..."
fi

# Check if docker is running
if ! docker info > /dev/null 2>&1; then
    echo "âŒ Docker is not running. Please start Docker and try again."
    exit 1
fi

# Stop all running containers
echo "ğŸ›‘ Stopping all running Docker containers..."
if [ "$(docker ps -q)" ]; then
    docker stop $(docker ps -q)
fi

if [ "$REBUILD" = true ]; then
    # Full cleanup for rebuild
    echo "ğŸ§¹ Cleaning up all containers, networks, and volumes..."
    docker-compose down -v
    
    # Remove node_modules and dist
    echo "ğŸ—‘ï¸ Removing build artifacts..."
    rm -rf node_modules dist
    
    # Rebuild images without cache
    echo "ğŸ—ï¸ Rebuilding Docker images (no cache)..."
    docker-compose build --no-cache
    
    # Start containers
    echo "ğŸ“¦ Starting rebuilt containers..."
    docker-compose up -d
else
    # Normal startup
    echo "ğŸ“¦ Building and starting containers..."
    docker-compose up -d
fi

# Wait for database to be ready
echo "â³ Waiting for database to be ready..."
sleep 5

# Run database migrations
echo "ğŸ”„ Running database migrations..."
docker-compose exec api npx prisma migrate deploy

# Install dependencies
if [ "$REBUILD" = true ] || [ ! -d "node_modules" ]; then
    echo "ğŸ“¥ Installing dependencies..."
    npm install
fi

# Generate Prisma client
echo "âš¡ Generating Prisma client..."
npx prisma generate

# Build application if rebuild flag is set
if [ "$REBUILD" = true ]; then
    echo "ğŸ”¨ Building application..."
    npm run build
fi

echo "âœ¨ Development environment is ready!"
echo "ğŸŒ API is running at http://localhost:3001"
echo "ğŸ“Š Database is running at localhost:5432"
echo ""
echo "Useful commands:"
echo "- View logs: docker-compose logs -f"
echo "- Stop environment: docker-compose down"
echo "- Run tests: npm test"
echo "- Full rebuild: bin/up rebuild"
